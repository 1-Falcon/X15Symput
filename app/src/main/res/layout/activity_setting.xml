<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.amosgwa.lisukeyboard.view.SettingActivity">

        <EditText
            android:id="@+id/edit_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:onClick="OpenLanguageSetting"
            android:id="@+id/open_language_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set keyboard"
            app:layout_constraintTop_toBottomOf="@+id/edit_field" />
    </android.support.constraint.ConstraintLayout>
</layout>
